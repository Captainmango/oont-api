generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  moduleFormat  = "cjs"
}

datasource db {
  provider = "postgresql"
}

model User {
  id Int @id @default(autoincrement())
  name String 
  email String @unique
  carts UserCart[]
  orders UserOrder[]
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("users")
}

model Product {
  id Int @id @default(autoincrement())
  name String
  quantity Int
  categories CategoryProduct[]
  carts CartProduct[]
  orders OrderProduct[]
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("products")
}

model Category {
  id Int @id @default(autoincrement())
  name String
  products CategoryProduct[]
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("categories")
}

model CategoryProduct {
  id Int @id @default(autoincrement())
  product Product @relation(fields: [productId], references: [id])
  productId Int
  category Category @relation(fields: [categoryId], references: [id])
  categoryId Int
  created_at DateTime @default(now())

  @@unique([productId, categoryId])
  @@map("category_product")
}

model Cart {
  id Int @id @default(autoincrement())
  users UserCart[]
  products CartProduct[]
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  deleted_at DateTime?

  @@map("carts")
}

model CartProduct {
  id Int @id @default(autoincrement())
  cart Cart @relation(fields: [cartId], references: [id])
  cartId Int
  product Product @relation(fields: [productId], references: [id])
  productId Int
  quantity Int @default(1)
  created_at DateTime @default(now())

  @@unique([cartId, productId])
  @@map("cart_products")
}

model UserCart {
  id Int @id @default(autoincrement())
  user User @relation(fields: [userId], references: [id])
  userId Int
  cart Cart @relation(fields: [cartId], references: [id])
  cartId Int
  created_at DateTime @default(now())

  @@unique([userId, cartId])
  @@map("user_carts")
}

enum OrderStatus {
  Pending
  Cancelled
  Fulfilled
}

model Order {
  id Int @id @default(autoincrement())
  status OrderStatus @default(Pending)
  users UserOrder[]
  products OrderProduct[]
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  deleted_at DateTime?

  @@map("orders")
}

model OrderProduct {
  id Int @id @default(autoincrement())
  order Order @relation(fields: [orderId], references: [id])
  orderId Int
  product Product @relation(fields: [productId], references: [id])
  productId Int
  quantity Int @default(1)
  created_at DateTime @default(now())

  @@unique([orderId, productId])
  @@map("order_products")
}

model UserOrder {
  id Int @id @default(autoincrement())
  user User @relation(fields: [userId], references: [id])
  userId Int
  order Order @relation(fields: [orderId], references: [id])
  orderId Int
  created_at DateTime @default(now())

  @@unique([userId, orderId])
  @@map("user_orders")
}